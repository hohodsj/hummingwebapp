    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "cwd": "${workspaceRoot}",
            "args": [],
            "windows": {
              "program": "${workspaceFolder}/node_modules/jest/bin/jest"
            }
          }
    ]
}