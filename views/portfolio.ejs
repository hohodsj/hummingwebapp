<% layout('layouts/boilerplate') %> 

<!-- Hover with text and link example -->
<div class="row">

<% for(let collection of formattedCollections) { %>
    <div class="col-md-6">
        <div class="thumbnail"> 
            <img src="<%= collection.src%>" alt="Humming Sang's Collection - <%= collection.collectionName%>">
            <div class="overlay">
                <a href="/collection/<%= collection.collectionName%> " class="work-link"  title="Click To View Series">
                    <div class="text">
                        <p class=<%= collection.isHorizontal ? "work-link" : "work-link-verti" %>><%=collection.collectionName%><br/>
                            <i class="glyphicon glyphicon-th"></i>
                        </p>
                    </div>
                </a>
            </div>
        </div>
    </div>
<% } %> 
</div>