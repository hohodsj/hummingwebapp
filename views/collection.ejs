<% layout('layouts/boilerplate') %> 
<div class="margin-top-spacing margin-bottom-spacing">
    <p class="masterpiece-title"><%= collection.description.title %> </p>
    <% for(let line of collection.description.description.split('\n')) {%> 
        <p class="masterpiece-content"><%= line %> </p>
    <% } %> 
</div>


<div class="row">
<% for(let artwork of collection.artworks) {%> 
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="thumbnail">
            <a data-fancybox="gallery" href="<%= artwork.thumbnailUrl%>" title="Click To Enlarge"><img src="<%= artwork.imageUrl%>" alt="By Humming Sang">
                <div class="overlay-pic"></div>
            </a>
        </div>
    </div>
<% } %> 
</div>


<div class="margin-bottom-spacing">
    <a href="/" class="outertext">
    <i class="fas fa-angle-left nav-arrow" aria-hidden="true">
    </i>
    </a>
</div>
