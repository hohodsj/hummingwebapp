<% layout('layouts/boilerplate') %> 
<div class="margin-top-spacing margin-bottom-spacing">
    <p class="masterpiece-title"><%= description.title %> </p>
    <% for(let line of description.description.split('\n')) {%> 
        <p class="masterpiece-content"><%= line %> </p>
    <% } %> 
</div>


<div class="row row-cols-1 row-cols-md-2 g-4 mt-0">
<% for(let artwork of formattedArtWork) {%> 
    <div class="col">
        <div class="thumbnail">
            <a data-fancybox="gallery" href="<%= artwork.thumbnailSrc%>" title="Click To Enlarge"><img src="<%= artwork.imageSrc%>" class="img-thumbnail p-0" alt="By Humming Sang">
                <div class="overlay-pic"></div>
            </a>
        </div>
    </div>
<% } %> 
</div>


<div class="margin-bottom-spacing">
    <a href="/" class="outertext">
    <i class="fas fa-angle-left nav-arrow" aria-hidden="true">
    </i>
    </a>
</div>
